<section id=signup">
   <form action="/" method="post">
      <div id='name' class='signup-outerDiv'>
         <label for="name">Full name:</label>
         <input type="text" name="name" required  />
         <div class='message' id='nameDiv'> Enter your first and last name. </div>
      </div>
      <div id='username' class='signup-outerDiv'>
         <label for="number">Username:</label>
         <input type="text" name="username" required  />
         <div class='message' id='usernameDiv'> Pick a unique name on Tractor Feed. </div>
      </div>
      <div id='password' class='signup-outerDiv'>
         <label for="password">Password:</label>
         <input type="password" name="password" required />
         <div class='message' id='websiteDiv'>6 characters or more (be tricky!).</div>
      </div>
      <div id='email' class='signup-outerDiv'>
         <label for="email">Email:</label>
         <input type="email" name="email" required />
         <div class='message' id='emailDiv'> We'll send you a confirmation.</div>
      </div>
      <div id='submit' class='signup-outerDiv'>
         <input type="submit" value="Create my account" />
      </div>
   </form>
</section>